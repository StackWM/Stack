<UserControl x:Class="LostTech.Stack.Views.WindowGroupEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LostTech.Stack.Views"
             mc:Ignorable="d"
             x:Name="LayoutRoot"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel>
            <TextBlock DockPanel.Dock="Left" Margin="6">Name:</TextBlock>
            <TextBox x:Name="NameEditor" Text="{Binding WindowGroup.Name, UpdateSourceTrigger=PropertyChanged, ElementName=LayoutRoot}"/>
        </DockPanel>

        <local:WindowFiltersEditor Filters="{Binding WindowGroup.Filters, ElementName=LayoutRoot}"
                                   Grid.Row="1"
                                   Margin="0,6,0,0"
        />
    </Grid>
</UserControl>
