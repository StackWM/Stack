<Grid
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:zones="clr-namespace:LostTech.Stack.Zones;assembly=Stack"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="576" Height="1024"
    d:DesignWidth="576"
    d:DesignHeight="1024"
    >
  <Grid.RowDefinitions>
    <RowDefinition Height="*"/>
    <RowDefinition Height="4*"/>
  </Grid.RowDefinitions>

  <zones:Zone x:Name="Full" Grid.RowSpan="2"/>
  <zones:Zone Grid.Row="0"/>
  <zones:Zone Grid.Row="1"/>
  <Border Grid.RowSpan="2" Height="160" VerticalAlignment="Bottom" Background="#44F">
      <!-- Find more symbols from Segoe UI Symbol in Character Map app -->
      <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                  FontFamily="Segoe UI Symbol" Foreground="White" Text="⇕" FontSize="80"/>
  </Border>
    <zones:Zone Grid.RowSpan="2" Height="160" Target="{Binding ElementName=Full}" VerticalAlignment="Bottom"/>
</Grid>
