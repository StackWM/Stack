<Grid
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:zones="clr-namespace:LostTech.Stack.Zones;assembly=Stack"
    mc:Ignorable="d"
    d:DesignWidth="400"
    d:DesignHeight="240"
    >
  <!-- large screen -->
  <Grid.ColumnDefinitions>
    <ColumnDefinition Width="1*"/>
    <ColumnDefinition Width="3*"/>
  </Grid.ColumnDefinitions>
  <!-- left column, which consists of 3 identical zones -->
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <zones:Zone Grid.Row="0"/>
    <zones:Zone Grid.Row="1"/>
    <zones:Zone Grid.Row="2"/>
  </Grid>
  <!-- huge space apart from the left column -->
  <zones:Zone Grid.Column="1"/>

  <!-- smaller vertical zone in the middle of the screen -->
  <Grid Grid.ColumnSpan="2">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="3*"/>
      <ColumnDefinition Width="4*"/>
      <ColumnDefinition Width="3*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="5*"/>
    </Grid.RowDefinitions>
    <zones:Zone Grid.Column="1" Grid.Row="1"/>
  </Grid>
</Grid>
