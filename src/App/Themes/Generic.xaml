<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:LostTech.Stack.Zones">


    <Style TargetType="{x:Type local:Zone}">
        <Setter Property="Background" Value="Transparent"/>
        <Style.Triggers>
            <Trigger Property="IsDragMouseOver" Value="True">
                <Setter Property="Background" Value="#A0000000"/>
            </Trigger>
            <DataTrigger Binding="{Binding ShowHints}" Value="True">
              <Setter Property="BorderBrush" Value="Black"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="{x:Type local:WindowButton}">
      <Style.Triggers>
        <Trigger Property="IsForeground" Value="True">
          <Setter Property="Background" Value="{x:Static SystemParameters.WindowGlassBrush}" />
        </Trigger>
      </Style.Triggers>
    </Style>

  <Style TargetType="{x:Type local:ZoneButton}">
    <Style.Triggers>
      <Trigger Property="IsForeground" Value="True">
        <Setter Property="Background" Value="{x:Static SystemParameters.WindowGlassBrush}" />
      </Trigger>
    </Style.Triggers>
  </Style>
</ResourceDictionary>
